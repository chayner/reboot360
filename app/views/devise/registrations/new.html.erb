<section class="SigninForm u-dark-background">
  <%= image_tag 'logo-reboot-white.png', class: "reboot-logo" %>

  <h3 class="Signin-title">Sign Up</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="SigninForm-field">
      <label for="email" class="SigninForm-label--icon"><i class="fa fa-envelope-o fa-fw"></i></label>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="SigninForm-field">
      <label for="password" class="SigninForm-label--icon"><i class="fa fa-lock fa-fw"></i></label>
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <em class="SigninForm-helpText"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="SigninForm-field">
      <label for="password-confirmation" class="SigninForm-label--icon"><i class="fa fa-lock fa-fw"></i></label>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <em class="SigninForm-helpText">Enter your password again</em>
    </div>

    <div class="SigninForm-field--submit">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
