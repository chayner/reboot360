//= depend_on_asset "bg-welcome.jpg"

body.sessions,
body.passwords,
body.registrations {
  background: url('<%= asset_path("bg-welcome.jpg") %>');
  background-position: center top;
  background-size: cover;

  #sb-site {
    background: transparent;
  }
}

.SigninForm {
  margin: 20px auto;
  max-width: 360px;
  padding: 1.5em;
  @include media($medium) {
    margin: 100px auto;
    padding: 0;
  }
  @include media($xlarge) {
    margin-top: 200px;
  }

  .reboot-logo {
    display: block;
    margin: 0 auto 1.5em;
  }
}

.SigninForm-field {
  margin-bottom: 0.75em;

  .SigninForm-label--icon {
    border-right: 2px solid $base-border-color;
    color: $white;
    font-size: 1.5em;
    line-height: 49px;
    padding: 0 6px 0 9px;
    position: absolute;
  }
  input {
    border: none;
    background: transparentize($white, .8);
    border-left: 4px solid $green;
    border-radius: 0;
    color: $white;
    display: block;
    font-size: 1.4em;
    margin: 0;
    padding: 10px 10px 10px 60px;
  }
  .SigninForm-helpText {
    display: block;
    text-align: right;
  }
  .field_with_errors input {
    background: transparentize(lighten($red, 25), .5);
    border-left-color: $red;
  }
}
.SigninForm-remember {
  font-size: 1.2em;
  label {
    @include inline-block;
  }
}

.SigninForm-field--submit input {
  background: $light-gray;
  border-radius: 0;
  color: $medium-gray;
  display: block;
  font-size: 1.3em;
  padding: 10px;
  text-weight: 400;
  text-transform: uppercase;
  width: 100%;
}

#error_explanation {
  background: lighten($error-color, 15);
  color: $red;
  font-weight: bold;
  margin-bottom: 0.5em;
  padding: 0.25em;
  text-align: center;

  h2 {
    display: none;
  }
}


.Signin-title {
  font-size: 1.2em;
  margin-bottom: 1em;
  text-align: center;
}


// Shared Links
.LoginLinks {
  margin-top: 2em;
  text-align: center;
}

.LoginLinks-item {
  @include inline-block;
  margin: 0 1em;
  a {
    color: $white;
    &:hover {
      color: $base-accent-color;
    }
  }
}
